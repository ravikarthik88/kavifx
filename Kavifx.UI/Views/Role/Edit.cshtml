@model Kavifx.UI.Models.UpdateRoleViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_dashLayout.cshtml";
}
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Update Role</h1>
    <a asp-action="Index" asp-controller="Role" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Manage Roles
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Role" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
